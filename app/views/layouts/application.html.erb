<!DOCTYPE html>
<html>
  <head>
    <title>App</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <section class="main-col w-100">
      <%= render 'layouts/flash_message' %>
      <%= yield %>
    </section>
    <ul>
      <li><%= link_to 'ユーザーログイン', new_user_session_path %></li>
      <li><%= link_to 'ユーザーログアウト', destroy_user_session_path, method: 'delete' %></li>
      <li><%= link_to 'ログイン', new_shop_session_path %></li>
      <li><%= link_to 'ログアウト', destroy_shop_session_path, method: 'delete' %></li>
    </ul>
  </body>
</html>
